<div class="questionForm row">
  <div class="col-md-6 col-md-offset-3">
    <form>
      <div class="form-group">
        {{input value=name class="form-control" placeholder="Please enter your name"}}
      </div>
      <div class="form-group">
        {{input value=location class="form-control" placeholder="Please enter your location"}}
      </div>
      <div class="form-group">
        {{textarea value=description class="form-control" placeholder="Give a brief description of issue you are having" rows=5}}
      </div>
      <button class="btn advance" {{action "save"}}>Help!</button>
    </form>
  </div>
</div>
